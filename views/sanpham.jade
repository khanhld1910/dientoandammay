
extends ./layout.jade
// tabledata dang o dang object
block content
  main.container.z-depth-1.grey.lighten-4
    .row      
      h4.header.brown-text.text-darken-4
        |Danh Sách Sản Phẩm
    .row#table-container
      table#myTable.bordered.z-depth-1.sortable
        thead
          tr.light-green
            th(data-field='idsanpham') Mã SP
            th(data-field='tensp') Tên
            th(data-field='loaisp') Loại
            th(data-field='dongia') Đơn giá        
        each item in tabledata
          tr.data-row
            td.item-id= item.idsanpham
            td.item-tensp= item.tensp
            td.item-loaisp= item.tenloaisp
            td.item-dongia= item.dongia
        
    form.row(action='/insertsp', method='post', name='insert-form')
      input#input-tensp.my-input.validate.col.s12.m3(type='text', placeholder='Tên sp', name='tensp')
      select#select-loaisp.browser-default.my-input.validate.col.s12.m3(name='idloaisp')
        option(value=' ', disabled='', selected='') Chọn loại sản phẩm
        each item in loaisp
          option(value= item.idloaisp)= item.tenloaisp
      input#input-dongia.my-input.validate.col.s12.m3(type='number', placeholder='Đơn giá', name='dongia', min=0, step=10000, value=0)
      button#insert-sp.btn-insert.btn.waves-effect.waves-light.my-btn.col.s12.m3(type='submit')
        |Thêm
      a#delete-sp.btn-delete.waves-effect.waves-light.btn.my-btn.col.s12.m3
        |Xóa
      a#update-sp.btn-update.waves-effect.waves-light.btn.my-btn.col.s12.m3
        |Cập nhật
  

        